<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>Produção de Leite - Milk Master</title>
    <link rel="icon" type="image/x-icon" href="/favicon_io/favicon.ico">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <button class="toggle-btn" onclick="toggleSidebar()">&#9776;</button>
        <a href="/">Início</a>
        <a href="/vacas">Vacas</a>
        <a href="/producao" class="active">Produção</a>
        <a href="/financeiro">Financeiro</a>
        <a href="/vacas/config">Configurações</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h1 class="mb-4">Produção de Leite</h1>

        <!-- Formulário de Registro de Produção -->
        <div class="container my-4">
            <form id="producaoForm">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="vacaSelect" class="form-label">Selecione a Vaca</label>
                        <select id="vacaSelect" class="form-select">
                            <option value="Vermelha">Vermelha</option>
                            <option value="Baixinha">Baixinha</option>
                            <option value="Faísca">Faísca</option>
                            <option value="Preta">Preta</option>
                            <option value="Branquinha">Branquinha</option>
                            <option value="Laranja">Laranja</option>
                            <option value="Bequinha">Bequinha</option>
                            <option value="Feinha">Feinha</option>
                            <option value="Saracura">Saracura</option>
                            <option value="Boneca">Boneca</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="dataInput" class="form-label">Data</label>
                        <input type="date" id="dataInput" class="form-control" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="quantiaLeite" class="form-label">Quantidade de Leite (litros)</label>
                        <input type="number" id="quantiaLeite" class="form-control"
                            placeholder="Digite a quantidade de leite" min="0" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Tipo de Ordenha</label>
                        <div class="form-check">
                            <input type="radio" id="primeiraOrdenha" name="tipoOrdenha" value="Primeira"
                                class="form-check-input" required>
                            <label for="primeiraOrdenha" class="form-check-label">Primeira Ordenha</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" id="segundaOrdenha" name="tipoOrdenha" value="Segunda"
                                class="form-check-input" required>
                            <label for="segundaOrdenha" class="form-check-label">Segunda Ordenha</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="quantiaRacao" class="form-label">Quantidade de Ração Consumida (kg)</label>
                        <input type="number" id="quantiaRacao" class="form-control"
                            placeholder="Digite a quantidade de ração" min="0" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Registrar Produção</button>
            </form>
        </div>
    </div>

    <script>
        // Função para alternar a visibilidade da sidebar
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const content = document.querySelector('.content');
            sidebar.classList.toggle('collapsed');
            content.style.marginLeft = sidebar.classList.contains('collapsed') ? '80px' : '250px';
        }
    </script>
</body>

</html>