<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>Contas a Pagar - Milk Master</title>
    <link rel="icon" type="image/x-icon" href="/favicon_io/favicon.ico">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="sidebar" id="sidebar">
        <button class="toggle-btn" onclick="toggleSidebar()">&#9776;</button>
        <a href="/">Início</a>
        <a href="/vacas">Vacas</a>
        <a href="/producao">Produção</a>
        <a href="/financeiro">Financeiro</a>
        <ul class="submenu">
            <li><a href="/financeiro/contasPagar">Contas a pagar</a></li>
            <li><a href="/financeiro/contasReceber">Contas a receber</a></li>
        </ul>
        <a href="/vacas/config">Configurações</a>
    </div>

    <!-- Content -->
    <div class="content">
        <h1 class="mb-4">Contas a Pagar</h1>
        <div class="alert alert-info" role="alert" style="text-align: center;">
            Acompanhe as contas a pagar da sua propriedade.
        </div>
        <!-- Tabela de Contas a Pagar -->
        <div class="container mt-5">
            <h2 class="text-center mb-4">Lista de Contas a Pagar</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nome da Conta</th>
                        <th>Valor (R$)</th>
                        <th>Data de Vencimento</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Fornecedor A</td>
                        <td>1,200.00</td>
                        <td>15/11/2024</td>
                        <td><span class="badge bg-warning">Pendente</span></td>
                        <td>
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal"
                                data-bs-target="#editarDespesaModal"
                                onclick="editarDespesa('Fornecedor A', '1200.00', '15/11/2024')">Editar</button>
                            <button class="btn btn-success btn-sm">Marcar como Pago</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Fornecedor B</td>
                        <td>500.00</td>
                        <td>20/11/2024</td>
                        <td><span class="badge bg-warning">Pendente</span></td>
                        <td>
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal"
                                data-bs-target="#editarDespesaModal"
                                onclick="editarDespesa('Fornecedor B', '500.00', '20/11/2024')">Editar</button>
                            <button class="btn btn-success btn-sm">Marcar como Pago</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Fornecedor C</td>
                        <td>750.00</td>
                        <td>25/11/2024</td>
                        <td><span class="badge bg-warning">Pendente</span></td>
                        <td>
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal"
                                data-bs-target="#editarDespesaModal"
                                onclick="editarDespesa('Fornecedor C', '750.00', '25/11/2024')">Editar</button>
                            <button class="btn btn-success btn-sm">Marcar como Pago</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal Criar Despesa -->
    <div class="modal fade" id="criarDespesaModal" tabindex="-1" aria-labelledby="criarDespesaModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="criarDespesaModalLabel">Criar Nova Despesa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="nomeConta" class="form-label">Nome da Conta</label>
                            <input type="text" class="form-control" id="nomeConta" required>
                        </div>
                        <div class="mb-3">
                            <label for="valorConta" class="form-label">Valor (R$)</label>
                            <input type="number" class="form-control" id="valorConta" required>
                        </div>
                        <div class="mb-3">
                            <label for="dataVencimento" class="form-label">Data de Vencimento</label>
                            <input type="date" class="form-control" id="dataVencimento" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary">Salvar Despesa</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Editar Despesa -->
    <div class="modal fade" id="editarDespesaModal" tabindex="-1" aria-labelledby="editarDespesaModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarDespesaModalLabel">Editar Despesa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="editarNomeConta" class="form-label">Nome da Conta</label>
                            <input type="text" class="form-control" id="editarNomeConta" required>
                        </div>
                        <div class="mb-3">
                            <label for="editarValorConta" class="form-label">Valor (R$)</label>
                            <input type="number" class="form-control" id="editarValorConta" required>
                        </div>
                        <div class="mb-3">
                            <label for="editarDataVencimento" class="form-label">Data de Vencimento</label>
                            <input type="date" class="form-control" id="editarDataVencimento" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Botões de Ação -->
    <div class="fixed-bottom-right">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#criarDespesaModal">+</button>
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Função para alternar a visibilidade da sidebar
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const content = document.querySelector('.content');

            sidebar.classList.toggle('collapsed');

            if (sidebar.classList.contains('collapsed')) {
                content.style.marginLeft = '80px';
            } else {
                content.style.marginLeft = '250px';
            }
        }

        // Função para carregar os dados da despesa no modal de edição
        function editarDespesa(nome, valor, vencimento) {
            document.getElementById('editarNomeConta').value = nome;
            document.getElementById('editarValorConta').value = valor;
            document.getElementById('editarDataVencimento').value = vencimento;
        }
    </script>
    <script src="/js/hover.js"></script>
</body>

</html>