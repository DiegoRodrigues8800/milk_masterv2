<!-- views/listarVacas.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>Listar Vacas</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="sidebar">
        <a href="/">Inicio</a>
        <a href="/vacas">Vacas</a>
        <a href="#">Raças</a>
        <a href="#">Produção</a>
        <a href="#">Financeiro</a>
        <a href="/vacas/config">Configurações</a>
    </div>

    <div class="content">
        <h1 class="mb-4">Lista de Vacas</h1>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Idade</th>
                    <th>Raça</th>
                    <th>Estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% vacas.forEach((vaca)=> { %>
                    <tr>
                        <td>
                            <%= vaca.idvaca %>
                        </td>
                        <td>
                            <%= vaca.nome %>
                        </td>
                        <td>
                            <%= vaca.idade %>
                        </td> <!-- Certifique-se de que a coluna 'idade' está definida no modelo Vaca -->
                        <td>
                            <%= vaca.Raca.nome %>
                        </td> <!-- Acesso ao nome da raça -->
                        <td>
                            <%= vaca.Estado.nome %>
                        </td> <!-- Acesso ao nome do estado -->
                        <td>
                            <form action="/vacas/excluir/<%= vaca.idvaca %>" method="POST"
                                onsubmit="return confirm('Tem certeza que deseja excluir esta vaca?');">
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>

        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>