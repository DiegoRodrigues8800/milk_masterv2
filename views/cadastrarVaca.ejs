<!-- views/cadastrarVaca.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>Cadastrar Vaca</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <h1>Cadastrar Vaca</h1>

    <% if (erros && erros.length> 0) { %>
        <ul class="erros">
            <% erros.forEach((erro)=> { %>
                <li>
                    <%= erro.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/vacas/cadastrar" method="POST">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%= dados.nome ? dados.nome : '' %>" required>

                <label for="idade">Idade:</label>
                <input type="number" id="idade" name="idade" value="<%= dados.idade ? dados.idade : '' %>" required>

                <label for="raca">Raça:</label>
                <select id="raca" name="racaId" required>
                    <option value="">Selecione a raça</option>
                    <% racas.forEach((raca)=> { %>
                        <option value="<%= raca.id %>" <%=dados.racaId==raca.id ? 'selected' : '' %>><%= raca.nome %>
                        </option>
                        <% }) %>
                </select>

                <button type="submit">Cadastrar</button>
            </form>
</body>

</html>